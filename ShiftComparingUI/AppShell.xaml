<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShiftComparingUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ShiftComparingUI.Views.Persons"
    xmlns:shiftsystems="clr-namespace:ShiftComparingUI.Views.Shiftsystems"
    xmlns:comparingTables="clr-namespace:ShiftComparingUI.Views.ComparingTables"
    FlyoutBehavior="Locked" FlyoutBackgroundColor="Orange" Padding="10">

    <FlyoutItem Title="Persons">
        <ShellContent
            ContentTemplate="{DataTemplate views:AllPersonsView}"/>
    </FlyoutItem>
    <FlyoutItem Title="Shiftsystems">
        <ShellContent
            ContentTemplate="{DataTemplate shiftsystems:AllShiftsystemsView}"/>
    </FlyoutItem>
    <FlyoutItem Title="Comparing Tables">
        <ShellContent
            ContentTemplate="{DataTemplate comparingTables:AllComparingTablesView}"/>
    </FlyoutItem>

</Shell>
