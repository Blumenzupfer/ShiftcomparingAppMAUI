<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShiftComparingUI.Views.AllPersonsView"
             Title="Persons">
    <Grid ColumnDefinitions="Auto, Auto, *" RowDefinitions="Auto, Auto, *"
          ColumnSpacing="10" RowSpacing="10"
          Padding="10">
        
        <Label Grid.Column="0" Grid.Row="0"
               Text="Here you can see a list of all registered persons.&#10;You can add, edit or delete persons.&#10;Persons are needed to create comparingtables.&#10;You can add multiple persons to multiple comparingtables.&quot;"
               FontSize="22"/>
        <Button Grid.Column="1" Grid.Row="0"
                Text="Add"
                FontSize="22"
                BackgroundColor="Green"/>
        <CollectionView Grid.Column="0" Grid.Row="1"
                        Grid.ColumnSpan="2">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type x:String}">
                    <Grid>
                        <Frame>
                            <Label Text="Hello"></Label>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
    </Grid>
</ContentPage>